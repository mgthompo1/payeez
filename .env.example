# Supabase
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Security
PAYEEZ_CREDENTIALS_ENCRYPTION_KEY=your-long-random-string

# CORS Configuration (REQUIRED for production)
# Comma-separated list of allowed origins for API requests
# Example: https://checkout.yourdomain.com,https://app.yourdomain.com
PAYEEZ_ALLOWED_ORIGINS=https://checkout.yourdomain.com

# Webhook Signature Enforcement (defaults to true - DO NOT disable in production)
# Set to 'false' ONLY for local development without PSP webhooks
PAYEEZ_ENFORCE_WEBHOOK_SIGNATURES=true

# Adyen Webhook Secret (HMAC key in hex format)
ADYEN_WEBHOOK_SECRET=your-adyen-hmac-key

# Basis Theory
BASIS_THEORY_PUBLIC_KEY=key_test_us_pub_xxx  # For SDK Elements (public)
BASIS_THEORY_PRIVATE_KEY=key_test_us_pvt_xxx  # For backend proxy (private)

# PSP Credentials (add the ones you need)

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Adyen
ADYEN_API_KEY=xxx
ADYEN_MERCHANT_ACCOUNT=xxx

# Authorize.net
AUTHORIZENET_API_LOGIN_ID=xxx
AUTHORIZENET_TRANSACTION_KEY=xxx

# Chase (Stratus/Orbital)
CHASE_ORBITAL_USERNAME=xxx
CHASE_ORBITAL_PASSWORD=xxx
CHASE_MERCHANT_ID=xxx
CHASE_TERMINAL_ID=xxx

# Nuvei
NUVEI_MERCHANT_ID=xxx
NUVEI_MERCHANT_SITE_ID=xxx
NUVEI_SECRET_KEY=xxx

# dLocal
DLOCAL_X_LOGIN=xxx
DLOCAL_X_TRANS_KEY=xxx
DLOCAL_SECRET_KEY=xxx

# Braintree
BRAINTREE_MERCHANT_ID=xxx
BRAINTREE_PUBLIC_KEY=xxx
BRAINTREE_PRIVATE_KEY=xxx

# Checkout.com
CHECKOUTCOM_SECRET_KEY=sk_xxx
CHECKOUTCOM_PUBLIC_KEY=pk_xxx

# Airwallex
AIRWALLEX_CLIENT_ID=xxx
AIRWALLEX_API_KEY=xxx

# VGS (Very Good Security) - Optional alternative to Basis Theory
# Use OAuth authentication (recommended) instead of Basic Auth
VGS_VAULT_ID=tntxxxxxxxx
VGS_ENVIRONMENT=sandbox
VGS_OAUTH_CLIENT_ID=xxx
VGS_OAUTH_CLIENT_SECRET=xxx

# Apple Pay
APPLE_PAY_MERCHANT_ID=merchant.com.example
APPLE_PAY_MERCHANT_CERT="-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----"
APPLE_PAY_MERCHANT_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
