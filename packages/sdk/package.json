{
  "name": "@atlas/sdk",
  "version": "1.1.0",
  "description": "Atlas Payment SDK - PCI-compliant payment orchestration for web applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@atlas/shared": "*",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@atlas/shared": "*"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
