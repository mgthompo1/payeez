{
  "name": "atlas",
  "version": "0.1.0",
  "private": true,
  "description": "PCI-compliant Payment Orchestration Layer",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "db:push": "cd packages/api && npx supabase db push",
    "db:generate": "cd packages/api && npx supabase gen types typescript --local > ../shared/src/database.types.ts"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.0.0"
}
